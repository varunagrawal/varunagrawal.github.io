---
import { getCollection } from "astro:content";

const navbarLinks = await getCollection("navbar");
---

<nav class="navbar navbar-expand-md col-10 mx-auto" data-bs-theme="light">
  <div class="container">
    <a class="navbar-brand" href="/">Varun Agrawal</a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a
            href="/research/"
            class={`nav-link ${Astro.url.pathname.includes("research") ? "active" : ""}`}
            target="_self"
          >
            Publications</a
          >
        </li>
        <li class="nav-item">
          <a
            href="/about/"
            class={`nav-link ${Astro.url.pathname.includes("about") ? "active" : ""}`}
            target="_self"
          >
            About
          </a>
        </li>
        <li class="nav-item">
          <a
            href="/fun_projects/"
            class={`nav-link ${Astro.url.pathname.includes("fun_projects") ? "active" : ""}`}
            target="_self"
          >
            Fun Projects
          </a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a
            class={`nav-link ${Astro.url.pathname.includes("blog") ? "active" : ""}`}
            href="/blog/">Blog</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
