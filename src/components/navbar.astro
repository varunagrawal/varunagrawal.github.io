---
import { getCollection } from "astro:content";

const navbarLinks = await getCollection("navbar");
---

<nav class="navbar navbar-expand-md" data-bs-theme="light">
  <div class="container">
    <a class="navbar-brand" href="/">Varun Agrawal</a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {
          navbarLinks.map((navbarLink) => (
            <li id={navbarLink.id} class="nav-item">
              <a
                href={navbarLink.data.url}
                class={`nav-link ${Astro.url.pathname.includes(navbarLink.id) ? "active" : ""}`}
                target={`${navbarLink.data.external ? "_blank" : ""}`}
              >
                {navbarLink.data.title}
              </a>
            </li>
          ))
        }
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a
            class={`nav-link ${Astro.url.pathname.includes("blog") ? "active" : ""}`}
            href="/blog/">Blog</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
